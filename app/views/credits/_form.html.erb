<%= form_with(model: credit,
  data: { controller: "form", action: "turbo:submit-end->form#reset" }) do |f| %>
  <div>
    <%= f.label :dealer %>
    <%= f.select :dealer_id,
      options_from_collection_for_select(@dealers, "id", "name", params[:dealer_id]),
                   {include_blank: "Dealer" },
                   {required: true} %>
  </div>

  <div>
    <%= f.label :amount %>
    <%= f.number_field :amount, step: "any",
                       value: number_with_precision(f.object.amount,precision: 2,  strip_insignificant_zeros: true),
                       placeholder: "$ or points",
                       autofocus: true,
                       required: true %>
  </div>

  <div>
    <%= f.label :notes %>
    <%= f.text_field :notes %>
  </div>

  <%= f.submit "Save" %>
<% end %>
