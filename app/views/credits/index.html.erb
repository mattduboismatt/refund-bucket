<div class="header">
  <h1>ğŸ’¸ Your credits, your money ğŸ’¸</h1>
  <div class="stats" id="stats">
    <%= render "stats", credits: @credits %>
  </div>
</div>

<%= turbo_frame_tag "new_credit" do %>
  <%= render "form", credit: Credit.new %>
<% end %>

<div class="credits-table">
  <div class="credits-table-header">
    <div>Dealer</div>
    <div>Amount</div>
    <div>Reference No.</div>
    <div>Expires At</div>
    <div>Notes</div>
    <div>ğŸ§¼</div>
  </div>
  <%= turbo_frame_tag "credits",
        autoscroll: true,
        data: { autoscroll_block: "start" } do %>
    <% if @credits.any? %>
      <div class="credits">
        <%= render @credits %>
      </div>
    <% else %>
      <div id="no_credits" class="no-credits">No unredeemed credits yet.</div>
    <% end %>
  <% end %>
</div>

<%= turbo_frame_tag "redeemed_credits" do %>
  <% if @redeemed_credits.any? %>
    <div class="redeemed-credits-table">
      <div class="credits-table-header">
        <div>Redeemed Credits</div>
      </div>
      <div class="credits">
        <%= render @redeemed_credits %>
      </div>
    </div>
  <% end %>
<% end %>
